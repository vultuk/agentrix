{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    /* Emit */
    "noEmit": false,
    "outDir": "dist",
    "rootDir": "src",
    "declaration": true,
    "declarationMap": true,
    "sourceMap": true
  },
  "include": [
    "src/**/*",
    "bin/**/*"
  ],
  "exclude": [
    "node_modules",
    "dist",
    "ui",
    "**/*.test.ts",
    "**/__tests__/**"
  ]
}

