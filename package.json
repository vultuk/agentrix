{
  "name": "agentrix",
  "version": "0.2.0",
  "description": "CLI utility for serving the agentrix UI",
  "license": "MIT",
  "author": "Simon Skinner (vultuk) <talkto@simonskinner.me>",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/vultuk/agentrix.git"
  },
  "homepage": "https://github.com/vultuk/agentrix#readme",
  "bugs": {
    "url": "https://github.com/vultuk/agentrix/issues"
  },
  "keywords": [
    "terminal",
    "worktree",
    "git",
    "cli",
    "pty",
    "tmux",
    "devtools"
  ],
  "packageManager": "bun@1.2.22",
  "files": [
    "bin/",
    "dist/",
    "ui/dist/",
    "README.md"
  ],
  "workspaces": [
    "ui"
  ],
  "engines": {
    "node": ">=20.0.0"
  },
  "bin": {
    "agentrix": "bin/agentrix.js"
  },
  "scripts": {
    "test": "tsx --test --test-concurrency=4 src/**/*.test.ts",
    "test:coverage": "c8 --clean --reporter=text --reporter=lcov tsx --test --test-concurrency=4 src/**/*.test.ts",
    "start": "node bin/agentrix.js",
    "dev": "node bin/agentrix.js",
    "dev:ui": "node scripts/ensure-ui-deps.js && bun run --filter agentrix-ui dev",
    "build": "npm run build:backend && npm run build:ui",
    "build:backend": "tsc -p tsconfig.build.json",
    "build:ui": "node scripts/ensure-ui-deps.js && bun run --filter agentrix-ui build",
    "prepack": "npm run build",
    "preview": "node scripts/ensure-ui-deps.js && bun run --filter agentrix-ui preview",
    "preview:ui": "node scripts/ensure-ui-deps.js && bun run --filter agentrix-ui preview",
    "typecheck": "tsc --noEmit",
    "watch": "tsc -p tsconfig.build.json --watch",
    "lint": "eslint . --ext .ts,.tsx,.js --cache --max-warnings=0",
    "lint:fix": "npm run lint -- --fix",
    "format": "prettier --check .",
    "format:fix": "prettier --write ."
  },
  "type": "module",
  "dependencies": {
    "@ngrok/ngrok": "^1.5.2",
    "@tailwindcss/postcss": "^4.1.16",
    "@vitejs/plugin-react": "^5.1.0",
    "autoprefixer": "^10.4.21",
    "mime-types": "^2.1.35",
    "node-pty": "^1.0.0",
    "openai": "^4",
    "react": "^19.2.0",
    "react-dom": "^19.2.0",
    "tailwindcss": "^4.1.16",
    "vite": "^7.1.12",
    "ws": "^8.17.1"
  },
  "devDependencies": {
    "@types/mime-types": "^3.0.1",
    "@types/node": "^24.10.0",
    "@types/ws": "^8.18.1",
    "@eslint/js": "^9.17.0",
    "eslint": "^9.17.0",
    "eslint-config-prettier": "^10.0.1",
    "eslint-plugin-import": "^2.31.0",
    "eslint-plugin-jsx-a11y": "^6.10.0",
    "eslint-plugin-react": "^7.37.2",
    "eslint-plugin-react-hooks": "^5.0.0",
    "globals": "^15.12.0",
    "prettier": "^3.4.2",
    "esbuild-node-loader": "^0.8.0",
    "esbuild-register": "^3.6.0",
    "jsdom": "^27.1.0",
    "tsx": "^4.20.6",
    "typescript": "^5.9.3",
    "typescript-eslint": "^8.15.0",
    "c8": "^9.1.0"
  }
}
