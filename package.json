{
  "name": "terminal-worktree",
  "version": "0.36.0",
  "description": "CLI utility for serving the terminal-worktree UI",
  "license": "MIT",
  "author": "Simon Skinner (vultuk) <talkto@simonskinner.me>",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/vultuk/terminal-worktree.git"
  },
  "homepage": "https://github.com/vultuk/terminal-worktree#readme",
  "bugs": {
    "url": "https://github.com/vultuk/terminal-worktree/issues"
  },
  "keywords": [
    "terminal",
    "worktree",
    "git",
    "cli",
    "pty",
    "tmux",
    "devtools"
  ],
  "packageManager": "bun@1.2.22",
  "files": [
    "bin/",
    "dist/",
    "ui/dist/",
    "README.md"
  ],
  "workspaces": [
    "ui"
  ],
  "engines": {
    "node": ">=20.0.0"
  },
  "bin": {
    "terminal-worktree": "bin/terminal-worktree.js"
  },
  "scripts": {
    "test": "node --test --test-concurrency=1",
    "start": "node bin/terminal-worktree.js",
    "dev": "node bin/terminal-worktree.js",
    "dev:ui": "node scripts/ensure-ui-deps.js && bun run --filter terminal-worktree-ui dev",
    "build": "npm run build:backend && npm run build:ui",
    "build:backend": "tsc -p tsconfig.build.json",
    "build:ui": "node scripts/ensure-ui-deps.js && bun run --filter terminal-worktree-ui build",
    "prepack": "npm run build",
    "preview": "node scripts/ensure-ui-deps.js && bun run --filter terminal-worktree-ui preview",
    "preview:ui": "node scripts/ensure-ui-deps.js && bun run --filter terminal-worktree-ui preview",
    "typecheck": "tsc --noEmit",
    "watch": "tsc -p tsconfig.build.json --watch"
  },
  "type": "module",
  "dependencies": {
    "@ngrok/ngrok": "^1.5.2",
    "@tailwindcss/postcss": "^4.1.16",
    "@vitejs/plugin-react": "^5.1.0",
    "autoprefixer": "^10.4.21",
    "mime-types": "^2.1.35",
    "node-pty": "^1.0.0",
    "openai": "^4",
    "react": "^19.2.0",
    "react-dom": "^19.2.0",
    "tailwindcss": "^4.1.16",
    "vite": "^7.1.12",
    "ws": "^8.17.1"
  },
  "devDependencies": {
    "@types/mime-types": "^3.0.1",
    "@types/node": "^24.10.0",
    "@types/ws": "^8.18.1",
    "esbuild-node-loader": "^0.8.0",
    "esbuild-register": "^3.6.0",
    "jsdom": "^27.1.0",
    "tsx": "^4.20.6",
    "typescript": "^5.9.3"
  }
}
