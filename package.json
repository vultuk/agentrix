{
  "name": "terminal-worktree",
  "version": "0.1.2",
  "description": "CLI utility for serving the terminal-worktree UI",
  "license": "MIT",
  "author": "Simon Skinner (vultuk) <talkto@simonskinner.me>",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/vultuk/terminal-worktree.git"
  },
  "homepage": "https://github.com/vultuk/terminal-worktree#readme",
  "bugs": {
    "url": "https://github.com/vultuk/terminal-worktree/issues"
  },
  "keywords": [
    "terminal",
    "worktree",
    "git",
    "cli",
    "pty",
    "tmux",
    "devtools"
  ],
  "files": [
    "bin/",
    "src/",
    "ui/dist/",
    "README.md"
  ],
  "engines": {
    "node": ">=20.0.0"
  },
  "bin": {
    "terminal-worktree": "bin/terminal-worktree.js"
  },
  "scripts": {
    "start": "node bin/terminal-worktree.js",
    "dev": "node bin/terminal-worktree.js",
    "dev:ui": "node scripts/ensure-ui-deps.js && npm --prefix ui run dev",
    "build": "npm run build:ui",
    "build:ui": "node scripts/ensure-ui-deps.js && npm --prefix ui run build",
    "prepack": "npm run build:ui",
    "preview": "node scripts/ensure-ui-deps.js && npm --prefix ui run preview",
    "preview:ui": "node scripts/ensure-ui-deps.js && npm --prefix ui run preview"
  },
  "type": "module",
  "dependencies": {
    "@tailwindcss/postcss": "^4.1.16",
    "@vitejs/plugin-react": "^5.1.0",
    "autoprefixer": "^10.4.21",
    "mime-types": "^2.1.35",
    "node-pty": "^1.0.0",
    "react": "^19.2.0",
    "react-dom": "^19.2.0",
    "tailwindcss": "^4.1.16",
    "vite": "^7.1.12",
    "ws": "^8.17.1"
  }
}
